{
  "version": 2,
  "rewrites": [
    {
      "source": "/actions.json",
      "destination": "/api/actions.json"
    },
    {
      "source": "/",
      "destination": "/api"
    },
    {
      "source": "/live",
      "destination": "/api"
    },
    {
      "source": "/demo",
      "destination": "/api"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
